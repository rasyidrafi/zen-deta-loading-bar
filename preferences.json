[
    {
      "property": "mod.detaloadingbar.enabled",
      "label": "Enable/Disable Deta Loading Bar",
      "type": "checkbox",
      "defaultValue": true
    },
    {
      "property": "mod.detaloadingbar.usefromzen",
      "label": "Use color from Zen browser theme (will override custom colors)",
      "type": "checkbox",
      "defaultValue": true
    },
    {
      "property": "mod.detaloadingbar.singlecolor",
      "label": "Use only left color for the loading bar (Disable gradient)",
      "type": "checkbox",
      "defaultValue": false
    },
    {
        "property": "mod.detaloadingbar.maincolor",
        "label": "Left color",
        "type": "string",
        "defaultValue": "rgba(243,202,176,255)"
    },
    {
        "property": "mod.detaloadingbar.middlecolor",
        "label": "Middle color",
        "type": "string",
        "defaultValue": "rgba(255,255,255,255)"
    },
    {
        "property": "mod.detaloadingbar.rightcolor",
        "label": "Right color",
        "type": "string",
        "defaultValue": "rgba(243,202,176,255)"
    },
    {
        "property": "mod.detaloadingbar.thickness",
        "label": "Thickness",
        "type": "string",
        "defaultValue": "6px"
    },
    {
        "property": "mod.detaloadingbar.minwidth",
        "label": "Custom Minimum Width",
        "type": "string",
        "defaultValue": "20px"
    },
    {
        "property": "mod.detaloadingbar.maxwidth",
        "label": "Custom Maximum Width",
        "type": "string",
        "defaultValue": "120px"
    },
    {
        "property": "mod.detaloadingbar.spacerwidth",
        "label": "Custom gap between loading bar and window edge (default is 8px)",
        "type": "string",
        "defaultValue": "8px"
    },
    {
        "property": "mod.detaloadingbar.position.top",
        "label": "Place loading bar at top (unchecked = bottom)",
        "type": "checkbox",
        "defaultValue": true
    },
    {
      "property": "mod.detaloadingbar.boxshadow.enabled",
      "label": "Enable/Disable Box Shadow",
      "type": "checkbox",
      "defaultValue": true
    },
    {
      "property": "mod.detaloadingbar.blur.enabled",
      "label": "Enable/Disable Blur Effect",
      "type": "checkbox",
      "defaultValue": true
    },
    {
        "property": "mod.detaloadingbar.blur.intensity",
        "label": "Blur Intensity",
        "type": "string",
        "defaultValue": "1.8px"
    }
]